<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teslameter.nr.teslameter.MainActivity">

    <TextView
        android:id="@+id/hdr_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/hdr_column_width"
        android:text="Channel"
        android:textAlignment="center"
        android:textSize="@dimen/hdr_height"/>

    <TextView
        android:id="@+id/hdr_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="Raw value"
        android:textAlignment="textEnd"
        android:textSize="@dimen/hdr_height"
        android:layout_toRightOf="@id/hdr_channel"/>

    <TextView
        android:id="@+id/hdr_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="Voltage [mV]"
        android:textAlignment="textEnd"
        android:textSize="@dimen/hdr_height"
        android:layout_toRightOf="@id/hdr_raw"/>

    <TextView
        android:id="@+id/x_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/hdr_column_width"
        android:text="X"
        android:textAlignment="center"
        android:textSize="@dimen/hdr_height"
        android:layout_below="@id/hdr_channel"/>

    <TextView
        android:id="@+id/y_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/hdr_column_width"
        android:text="Y"
        android:textAlignment="center"
        android:textSize="@dimen/hdr_height"
        android:layout_below="@id/x_legend"/>

    <TextView
        android:id="@+id/z_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/hdr_column_width"
        android:text="Z"
        android:textAlignment="center"
        android:textSize="@dimen/hdr_height"
        android:layout_below="@id/y_legend"/>

    <TextView
        android:id="@+id/aux1_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/hdr_column_width"
        android:text="AUX 1"
        android:textAlignment="center"
        android:textSize="@dimen/hdr_height"
        android:layout_below="@id/z_legend"/>

    <TextView
        android:id="@+id/aux2_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/hdr_column_width"
        android:text="AUX 2"
        android:textAlignment="center"
        android:textSize="@dimen/hdr_height"
        android:layout_below="@id/aux1_legend"/>

    <TextView
        android:id="@+id/x_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/x_legend"
        android:layout_below="@id/hdr_raw"/>

    <TextView
        android:id="@+id/y_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/y_legend"
        android:layout_below="@+id/x_raw" />

    <TextView
        android:id="@+id/z_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/z_legend"
        android:layout_below="@+id/y_raw" />

    <TextView
        android:id="@+id/aux1_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/aux1_legend"
        android:layout_below="@+id/z_raw" />

    <TextView
        android:id="@+id/aux2_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/aux2_legend"
        android:layout_below="@+id/aux1_raw" />

    <TextView
        android:id="@+id/x_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/x_raw"
        android:layout_below="@+id/hdr_voltage"/>

    <TextView
        android:id="@+id/y_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/y_raw"
        android:layout_below="@+id/x_voltage"/>

    <TextView
        android:id="@+id/z_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/z_raw"
        android:layout_below="@+id/y_voltage"/>

    <TextView
        android:id="@+id/aux1_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/aux1_raw"
        android:layout_below="@+id/z_voltage"/>

    <TextView
        android:id="@+id/aux2_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="@dimen/value_height"
        android:width="@dimen/value_width"
        android:text="-----"
        android:textAlignment="textEnd"
        android:textSize="@dimen/value_text_size"
        android:fontFamily="monospace"
        android:layout_toRightOf="@id/aux2_raw"
        android:layout_below="@+id/aux1_voltage"/>

</RelativeLayout>
